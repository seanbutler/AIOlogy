{
  "network": {
    "layers": [784, 1024, 10],
    "learning_rate": 0.01,
    "activation": "relu",
    "weight_init": {
      "method": "uniform",
      "range": [-0.25, 0.25]
    }
  },

  "training": {
    "epochs": 3,
    "shuffle": true,
    "data_path": "./data/mnist_images/"
  },

  "data": {
    "train_path": "./data/mnist_images/train/",
    "test_path": "./data/mnist_images/test/",
    "image_size": [28, 28],
    "normalize": true
  },

  "output": {
    "save_plots": true,
    "loss_file": "training_loss.csv"
  }

}

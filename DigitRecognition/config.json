{
  "network": {
    "layers": [784, 128, 10],
    "learning_rate": 0.05,
    "activation": "relu",
    "weight_init": {
      "method": "he",
      "range": [0.0, 0.1]
    } 
  },

  "training": {
    "epochs": 25,
    "shuffle": true,
    "data_path": "./data/mnist_images/"
  },

  "data": {
    "train_path": "./data/mnist_images/test/",
    "test_path": "./data/mnist_images/test/",
    "image_size": [28, 28],
    "normalize": true
  },

  "output": {
    "save_plots": true,
    "loss_file": "training_loss.csv"
  }

}

{
  "network": {
    "layers": [784, 512, 256, 128, 64, 10],
    "learning_rate": 0.005,
    "activation": "relu",
    "weight_init": {
      "method": "he",
      "range": [0.0, 0.1]
    } 
  },

  "training": {
    "epochs": 25,
    "shuffle": true,
    "data_path": "./data/mnist_images/",
    "learning_rate": {
      "initial": 0.01,
      "schedule": "exponential",
      "decay": 0.05    }
  },

  "data": {
    "train_path": "./data/mnist_images/train/",
    "test_path": "./data/mnist_images/test/",
    "image_size": [28, 28],
    "normalize": true
  },

  "output": {
    "save_plots": true,
    "loss_file": "training_loss.csv"
  }

}
